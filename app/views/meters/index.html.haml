.container.p-3.my-3.border
  %h1 All Meters

.container.p-3.my-3.border
  %table.table.table-striped.table-hover.table-sm
    %thead
      %tr
        %th Name
        %th Start
        %th Finish
        %th Interval
        %th Unit
        %th
        %th
        %th

    %tbody
      - @meters.each do |meter|
        %tr
          %td= meter.name
          %td= meter.start
          %td= meter.finish
          %td= meter.interval.inspect # "7 days" instead of 86400
          %td= meter.unit
          %td= link_to 'Show', meter, class: 'btn btn-outline-primary btn-sm'
          %td= link_to 'Destroy', meter, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm'

  %br

  = link_to 'New Meter', new_meter_path, class: 'btn btn-outline-success'
